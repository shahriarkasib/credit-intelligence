# =============================================================================
# Credit Intelligence - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your API keys
# Required fields are marked with [REQUIRED]
# Optional fields will use defaults or disable features if not set

# =============================================================================
# LLM Provider - Groq (Primary) [REQUIRED]
# =============================================================================
# Get your free API key at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key

# =============================================================================
# LangSmith - Tracing & Observability [RECOMMENDED]
# =============================================================================
# Get your API key at: https://smith.langchain.com
# Set LANGCHAIN_TRACING_V2=false to disable tracing
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=credit-intelligence
LANGCHAIN_API_KEY=your_langsmith_api_key

# =============================================================================
# Langfuse - Open Source LLM Observability [OPTIONAL]
# =============================================================================
# Alternative to LangSmith. Get your keys at: https://cloud.langfuse.com
# Langfuse provides tracing, evaluation, and debugging for LLM apps
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# Data Sources [REQUIRED FOR FULL FUNCTIONALITY]
# =============================================================================

# Finnhub - Stock & Market Data
# Get your free API key at: https://finnhub.io
FINNHUB_API_KEY=your_finnhub_api_key

# SEC EDGAR - US Public Company Filings (no API key needed)
# Provide your contact info for rate limiting compliance
SEC_EDGAR_USER_AGENT=YourName contact@example.com

# CourtListener - Legal Records
# Get your API key at: https://www.courtlistener.com/help/api/
COURTLISTENER_API_KEY=your_courtlistener_api_key

# Tavily - AI-Optimized Web Search
# Get your API key at: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key

# OpenCorporates - Company Registry Data (Optional)
# Get your API key at: https://opencorporates.com
OPENCORPORATES_API_KEY=

# =============================================================================
# Database - MongoDB [OPTIONAL]
# =============================================================================
# Get a free cluster at: https://cloud.mongodb.com
# If not set, runs in memory-only mode
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/credit_intelligence

# =============================================================================
# Google Sheets Logging [OPTIONAL]
# =============================================================================
# For logging runs to Google Sheets
# 1. Create a service account at: https://console.cloud.google.com
# 2. Download credentials JSON file
# 3. Share your spreadsheet with the service account email
GOOGLE_CREDENTIALS_PATH=/path/to/google-credentials.json
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id

# =============================================================================
# Alternative LLM Providers [OPTIONAL]
# =============================================================================
# These are optional - Groq is the primary provider

# OpenAI - For GPT models
# Get your API key at: https://platform.openai.com
OPENAI_API_KEY=

# Anthropic - For Claude models
# Get your API key at: https://console.anthropic.com
ANTHROPIC_API_KEY=

# Google AI - For Gemini models
# Get your API key at: https://makersuite.google.com
GOOGLE_API_KEY=

# =============================================================================
# Feature Flags [OPTIONAL]
# =============================================================================
# Use LangChain-wrapped LLM calls (default: true)
USE_LANGCHAIN_LLM=true

# Use LangChain supervisor instead of custom (default: false)
USE_LANGCHAIN_SUPERVISOR=false
